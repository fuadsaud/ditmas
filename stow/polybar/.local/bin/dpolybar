#!/usr/bin/env sh

function kill_all_bars {
  killall -q polybar
}

function wait_for_bar_shutdown {
  while pgrep -u $UID -x polybar > /dev/null; do sleep 1; done
}

function launch_bar {
  local bar="$1"
  log_dir="${HOME}/.local/var/log/polybar"
  log_file="${log_dir}/log"

  mkdir -p "${log_dir}"

  polybar --reload "${bar}" 2> "${log_file}" &
}

function launch_main_bar {
  MONITOR=HDMI2 launch_bar main
}

function launch_mobile_bar {
  MONITOR=eDP1 launch_bar main-mobile
}

function launch_aux_bar {
  MONITOR=DP1 launch_bar aux
}

kill_all_bars
wait_for_bar_shutdown
launch_main_bar
launch_mobile_bar
launch_aux_bar
