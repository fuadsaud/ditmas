down_p_bg    = #5e606c

player_bg = ${xrdb:color6}
player_fg = ${xrdb:color0}

# # #
# Bars
#
[bar/base]
monitor = ${env:MONITOR:}

dpi      = 192
width    = 100%
height   = 40
offset-x = 0
offset-y = 0

bottom = true

background = #000f0f0f
foreground = ${xrdb:color7}

border-bottom-size  = 8
border-top-size     = 0

spacing            = 0
padding-left       = 2
padding-right      = 2

font-N = <fontconfig pattern>;<vertical offset>
font-0 = Siji:size=8;0
font-1 = scientifica:style=Bold:pixelsize=10;1
font-2 = Space Mono for Powerline:style=Bold:pixelsize=8;1
font-3 = Monospace:pixelsize=9;1

cursor-click = pointer

fixed-center = true

[bar/main]
inherit=bar/base

modules-left    = date temperature battery paddinglite github arch-updates
modules-center  = xwindow
modules-right   = paddinglite redshift dnd mic volume wireless-ssid nu-vpn paddinglite workspaces

[bar/aux]
inherit=bar/base
modules-left    = playerctl-prev playerctl-play-pause playerctl-next playerctl-metadata
modules-center  =
modules-right   = workspaces

enable-ipc = true

