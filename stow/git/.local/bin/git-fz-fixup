#!/usr/bin/env zsh

PARAMS="$@"

function () {
  local commits commit
  commits=$(git log --color=always --pretty=oneline --abbrev-commit -100 --reverse) &&
    commit=$(echo "$commits" | fzf --tac +s +m -e --ansi --reverse) &&
    commit_sha=$(echo "$commit" | sed "s/ .*//")
  git commit --fixup $commit_sha $PARAMS
}
